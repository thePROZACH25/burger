<div class="container">
    <div class="col-lg-10">

        <div class="jumbotron">
            <h1 class="display-4 text-center">Eat Da Burger!!!</h1>
            <p class="lead text-center">Add a burger or select one of ours. Then eat it!!!</p>
            <hr class="my-4">
            <div class="row">
                <div class="form-group">

                    <input id="newburger" type="text" class="form-control" placeholder="Add a burger!" name="burger_name">
                </div>
                <button type="submit" class="btn btn-primary newBurgers" id="submitBtn">Submit</button>
            </div>
        </div>

        <div class="container">
            <div class="row">

                <div class="card" style="width: 23rem;">
                    <div class="card-body">
                        <h4 class="card-title">Burgers to Eat</h4>
                        <hr>

                        <ul>
                            {{#each burgers}} 
                            {{#unless devoured}}
                            <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                            <button type="button" class="eatBurger btn btn-warning" id="devourBurger"data-id="{{this.id}}"
                                data-newDevoured="{{devour}}">Eat Burger<span class="fa fa-usd"></span></button>
                            {{/unless}}
                            {{/each}}
                        </ul>

                    </div>
                </div>


                <div class="card" style="width: 23rem;">
                    <div class="card-body">
                        <h4 class="card-title">Burgers you Devoured!</h4>
                        <hr>

                        <ul>
                            {{#each burgers}}
                            {{#if devoured}}
                            <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                            
                            {{/if}}
                            {{/each}}
                        </ul>



                    </div>
                </div>

            </div>
        </div>

    </div>
</div>