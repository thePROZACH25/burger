<div class="container">
    <div class="row col-lg-10">
        <h1>Eat Da Burgers</h1>

        <h2>Burgers that need to be devoured</h2>

        <ul>
            {{#each burgers}}
            {{!-- {{#unless devoured}} --}}
            {{!-- {{> cats/cat-block sleep=true}} --}}
            {{!-- {{/unless}} --}}
            {{/each}}
        </ul>

        <h2>Burgers that have been devoured</h2>

        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{!-- {{> cats/cat-block sleep=false}} --}}
            {{/if}}
            {{/each}}
        </ul>

        <h2>Add a Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="name">
            </div>

            <button type="submit">Add Burger</button>
        </form>
    </div>
</div>